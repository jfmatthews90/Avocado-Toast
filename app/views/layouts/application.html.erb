<!DOCTYPE html>
<html>
  <head>
    <title>Avocado Toast</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

  </head>

  <body>

  	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		  <div class="container-fluid">
		  	<div class="navbar-header">
	  		  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				  </button>
					<div class="projectName navbar-brand">
				    <li><%= link_to "Avocado Toast", root_path %></li>
					</div> <!-- /Project name -->
				</div> <!-- /Navbar-header -->

		    <div class="navbar-collapse collapse">
		      <ul class="nav navbar-nav navbar-right">
				    <li><%= link_to "Posts", posts_path %></li>
				    <li><%= link_to "About", static_pages_about_path %></li>
				    <li><%= link_to "Contact", static_pages_contact_path %></li>
				    <li class="search-bar">
				    	<%= form_with(url: posts_path, method: 'get', local: true) do |form| %>
							<%= form.label :q, 'Search for:' %>
						  <%= form.text_field :q, id: 'q', value: params[:q] %>
						  <%= form.submit 'Search' %>
							<% end %>
						</li>
		      </ul> <!-- /Links to pages -->

		      <ul class="nav pull-right">
		      	<li>
		      		<% if user_signed_in? %>
		      			<%= link_to('Sign out', destroy_user_session_path, method: :delete) %>
		      		<% else %>
		      			<%= link_to('Sign in', new_user_session_path) %>
		      		<% end %>
		      	</li>
		      </ul> <!-- /User login and logout session options -->
		    </div> <!-- /Navbar-collapse -->
		  </div> <!-- /Container-fluid -->
		</nav> <!-- /Navbar-->

		<!-- flash tags for Welcome Message upon user sign-in -->
    <% if notice %>
      <p id="notice" class="alert alert-info"><%= notice %></p>
      </div>
    <% elsif alert %>
      <p id="notice" class="alert alert-warning"><%= alert %></p>
      </div>
    <% end %> <!-- /flash tag notice -->


    <%= yield %>


		<footer class="footer">
			<div class="copyright">
		  	&copy; 2017 Test Blog - All Rights Reserved
		  </div> 
		</footer> <!-- /Footer -->

	<!-- JavaScript -->
	<!-- Bootstrap jQ -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<!-- Bootstrap JS -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </body>
</html>
