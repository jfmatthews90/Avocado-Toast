<% if signed_in? %>

  <div class="new-comment">
    <h3>Add a comment:</h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>
      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control" %>
      </p>

      <p>
        <%#= f.label :rating %><br>
        <%#= f.text_field :rating, class: "rating" %>
      </p>  

      <p>
        <%= f.submit "Submit", class: "btn btn-info btn-lg btn-submit" %>
      </p>
      <hr />
      
    <% end %>
  </div>

<% end %>